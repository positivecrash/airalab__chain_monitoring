doctype html

block html
html(lang='en')
	head
		meta(http-equiv="Content-Type" content="text/html;charset=UTF-8")
		meta(name='viewport' content="width=device-width, initial-scale=1, shrink-to-fit=no")

		title #{meta_title} | airalab.org
		meta(name='description' content=pageDescription || '')
		meta(name='keywords' content=pageKeywords || '')


		link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,300i,400,400i,500,500i,700,700i&amp;subset=cyrillic,cyrillic-ext" type="text/css" media="all")

		link(href='assets/css/airalabrus.min.css?v=1' rel='stylesheet')
			
		script(src='assets/js/jquery-2.1.4.min.js?v=1')
		script(src='assets/js/main.min.js?v=1')

		link(rel="icon" href="favicon.ico" type="image/x-icon")
		link(rel="shortcut icon" href="favicon.ico" type="image/x-icon")
		link(rel="apple-touch-icon" sizes="114x114" href="apple-touch-icon-114x114.png")
		link(rel="apple-touch-icon" sizes="72x72" href="apple-touch-icon-72x72.png")

	body(class= authorised === true ? "logged" : "")

		include  ../includes/header.pug
		
		block content

		include ../includes/footer.pug